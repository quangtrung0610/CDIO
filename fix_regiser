<?php

    require_once("connect.php");
    if(isset($_POST["btn_save"])){
        $Use_Name = trim($_POST['Use_Name']);
        $PassWord = trim($_POST['PassWord']);
        
        $sql = "SELECT * FROM user WHERE Use_Name = '$Use_Name'";
        $result = mysqli_query($conn, $sql);
        if (mysqli_num_rows($result) > 0)
    {
        // Sử dụng javascript để thông báo
        echo '<script language="javascript">alert("Bị trùng tên hoặc chưa nhập tên!"); window.location="regiser.php";</script>';
        header("Localtion: Regiser.php");
    }
    else {
        // Ngược lại thì thêm bình thường
        $sql = "INSERT INTO user (Use_Name, PassWord) VALUES ('$Use_Name','$PassWord')";
        echo '<script language="javascript">alert("Đăng ký thành công!"); window.location="regiser.php";</script>';
    if (mysqli_query($conn, $sql)){
        echo "Tên đăng nhập: ".$_POST['Use_Name']."<br/>";
        echo "Mật khẩu: " .$_POST['PassWord']."<br/>";
    }
    else {
        echo '<script language="javascript">alert("Có lỗi trong quá trình xử lý"); window.location="regiser.php";</script>';
    }
}
}
